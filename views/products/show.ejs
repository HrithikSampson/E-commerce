<%- include("../partials/header")%>
<%- include("../partials/navbar")%>

<div class="container mt-5">

    <div class="row">
        <div class="col-lg-6">
            <div class="card" style="width: 25rem;">
                <img src="<%=product.img%>" class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title"><%=product.name%></h5>
                  <h5 class="card-title">$ <%=product.price%></h5>
                  <p class="card-text"><%=product.desc%></p>
                  <a href="#" class="btn btn-success">Buy</a>
                  <a href="#" class="btn btn-secondary">Add To Cart</a>
                  <a href="/products/<%=product._id%>/edit" class="btn btn-warning">Edit</a>
                  <div class="mt-3">
                    <form action="/products/<%=product._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                  </form>
                  </div>
                 
                </div>
              </div>
        </div>

        <div class="col-lg-6">
            <h5>Reviews</h5>
            <div class="card">    
                <%for(let rev of product.reviews.reverse()){%>
                    <div class="card-body" style="height: auto;">
                        <h5 class="card-title"><%=rev.rating%></h5>
                        <p class="card-text"><%=rev.comments%></p>
                    </div>
                <%}%>
            </div>    
            <h1>Leave a Review</h1>
            <form action="/products/<%=product._id%>/reviews" method="POST" novalidate>
                <div class="mb-3">
                    <label for="Rating" class="form-label">Rating</label>
                    <input name="range" type="range" class="form-range" min=0 max=5 required>
                </div>
                <div class="mb-3">
                    <label for="name" class="form-label">Description</label>
                    <textarea name="desc" rows="15" cols="10"type="text" class="form-control" required></textarea>
                    <div  class="form-text">
                      Your review must be authentic.
                    </div>
                </div>
                
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>
        </div>
        
    </div>

</div>


<%- include("../partials/footer")%>
